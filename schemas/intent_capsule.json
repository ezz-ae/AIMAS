{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Intent Capsule (FCT-Compliant)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent_id",
    "actor_id",
    "domain",
    "mode",
    "captured_at",
    "intent_features"
  ],
  "properties": {
    "intent_id": {
      "type": "string"
    },
    "actor_id": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "enum": [
        "wish",
        "plan",
        "active",
        "urgent"
      ]
    },
    "captured_at": {
      "type": "string",
      "format": "date-time"
    },
    "intent_features": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "category": {
          "type": "string"
        },
        "constraints": {
          "type": "array"
        },
        "sensitivity": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "time_constraint": {
          "type": "string"
        }
      }
    },
    "raw_payload_ref": {
      "type": [
        "string",
        "null"
      ]
    }
  }
}
