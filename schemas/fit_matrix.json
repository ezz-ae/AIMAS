{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fit Matrix (FM)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent_id",
    "eta_hours",
    "success_probability",
    "confidence_level",
    "paths"
  ],
  "properties": {
    "intent_id": {
      "type": "string"
    },
    "eta_hours": {
      "type": "number"
    },
    "success_probability": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "confidence_level": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "guaranteed"
      ]
    },
    "sensitivity_tag": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "paths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path_id",
          "type",
          "eta_hours",
          "success_probability",
          "free_baseline"
        ],
        "properties": {
          "path_id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "free_baseline",
              "paid_accelerator",
              "critical_guaranteed"
            ]
          },
          "eta_hours": {
            "type": "number"
          },
          "success_probability": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "free_baseline": {
            "type": "boolean"
          },
          "price": {
            "type": [
              "object",
              "null"
            ],
            "additionalProperties": false,
            "properties": {
              "amount": {
                "type": "number"
              },
              "currency": {
                "type": "string"
              }
            }
          },
          "guarantees": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
